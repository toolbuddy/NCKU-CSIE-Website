extends ../layouts/teacher.pug

block stylesheets
  link(rel="stylesheet", href="/css/about/teacher.css")

block header
  include ../components/header.pug
  
block content
  include ../components/teacher/detail.pug
  //- cover
  section.cover_grid
    img.cover_profile(src=`${static}/images/teacher/${T.id}`, alt='')
    section.cover_info
      span.cover_name=T.c_name
      each name in T.c_title_name
        span.cover_position=`${name}`
      p.cover_dept=T.dept
      section.cover_locate-grid
        img.cover_locate-icon(src="data:image/png;base64,")
        span.cover_lab 
          a(href='https://sites.google.com/site/nckuikm/home', target='_blank')=T.lab
          span.cover_locate=T.locate
      p.cover_specialty=T.specialty
  //- detail
  section.content_detail
    section.content_card-grid
      section.content_contact
        h1.content_title='聯絡資訊'
        section.content_contact-grid
          img.content_contact_mail-icon(src="data:image/png;base64,")
          a.content_contact_mail(href=`mailto:${T.mail}`)=T.mail
          img.content_contact_phone-icon(src="data:image/png;base64,")
          a.content_contact_phone(href=`tel:${T.phone}`)=T.phone
          img.content_contact_web-icon(src="data:image/png;base64,")
          a.content_contact_web(href=`${T.web}`, target='_blank')=T.web
      section.content_education
        +detail('學歷', T.education)
      section.content_experience
        +detail('經歷', T.experience)
      section.content_award
        +detail('榮譽及獲獎', T.award)
      section.content_refereed-paper
        +detail('Refereed Papers', T.refereedPaper)
      section.content_conference-paper
        +detail('Conference Papers', T.conferencePaper)
      section.content_
        +detail('指導學生情況', T.student)

block footer

block scripts 

