extends ../layouts/teacher.pug

block stylesheets
  link(rel="stylesheet", href="/css/about/teacher.css")

block header
  include ../components/header.pug
  
block content
  include ../components/teacher/detail.pug
  //- cover
  section.content_cover
    img(src=`${static}/images/teacher/${T.id}`, alt='')
    p=T.c_name
      each name in T.c_title_name
        p.content_position=`${name}`
    svg(width='100%',height='300',viewBox='0 0 400 300', preserveAspectRatio='none')
      path(d='M0,0 L0,100  C229,175 195,29 400,100  L400,0 Z')

  //- detail
  section.content_detail
    +detail('專長及研究領域', T.specialty)
    +detail('學歷', T.education)
    +detail('經歷', T.experience)

