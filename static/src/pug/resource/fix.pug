append data
  -
    const i18n = Object.freeze( {
      [ LANG.getLanguageId( 'en-US' ) ]: {
        'title':      'Equipment Repair',
      },
      [ LANG.getLanguageId( 'zh-TW' ) ]: {
        'title':      '修繕登記',
      },
    } );
    const currentRoute = 'resource/fix';

append title
  +title( i18n[ LANG.id ].title )

append stylesheets
  +css( 'resource/fix' )

append header

append content
  include /components/common/not-available.pug
  +notAvailable()

append footer

append scripts
  +js( 'resource/fix' )
