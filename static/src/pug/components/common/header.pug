            faculty: '師資陣容',
            index:   '關於本系',
            intro:   '系所介紹',
            staff:   '行政人員',
          },
          announcement: {
            activity:    '活動公告',
            all:         '全部公告',
            index:       '系所公告',
            recruitment: '徵才資訊',
          },
          home: {
            index: '首頁',
            login: '登入',
          },
          research: {
            index:        '學術研究',
            labs:         '實驗室',
