  header#header.header
    //- Logo
    figure.header__logo.logo
      +image( {
        alt: 'csie',
        className: 'logo__image',
        src: 'logo/csie.png',
      } )
      figcaption.logo__caption.caption
        h1.caption__text.caption__text--large 成功大學資訊工程學系暨研究所
        h2.caption__text.caption__text--small Department of Computer Science and Information Engineering

    //- Menu Icon
    button.header__menu ☰

    //- Navigation Bar
    nav.header__navigation.navigation

      //- Search Column, currently not available
      form.navigation__search.search( action = '/search', method = 'POST' )
        input.search__input( type = 'text', placeholder = i18n[ language ].util.search )
        input.search__submit( type = 'submit', value = '' )

      //- Cancel Icon
      button.navigation__cancel ✕

      ul.navigation__list.list
        li.list__item.item
          a.item__link( href = `/?language=${ language }` )= i18n[ language ].route.home.index
        li.list__item.item
          a.item__link( href = `/about?language=${ language }` )= i18n[ language ].route.about.index
          button.item__switch.switch
            span.switch__icon
          ul.item__dropdown.dropdown
            li.dropdown__item.item
              a.item__link( href = `/about/intro?language=${ language }` )= i18n[ language ].route.about.intro
            li.dropdown__item.item
              a.item__link( href = `/about/faculty?language=${ language }` )= i18n[ language ].route.about.faculty
