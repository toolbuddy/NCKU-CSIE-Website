include /components/announcement/title.pug
include /components/common/url.pug

section.announcement
  header.announcement__headline.headline
    aside.headline__tags.tags
      each tag in tags
        button.tags__tag( class=`tags__tag--${ tag }` )= tag
    h1.headline__title= title
    a.headline__announcer= `公告人員 : ${ author }`
    time.headline__time= time
  +announcement__title( '公告內容' )
  article.announcement__article.article= content
  nav.announcement__attachments.attachments
    - attachments.sort( ( attachmentA, attachmentB ) => attachmentB.length - attachmentA.length )
    each attachment in attachments
      a.attachments__attachment( href = attachment.url )= attachment.name
