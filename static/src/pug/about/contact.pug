append title
  +title( i18n[ language ].title )

append stylesheets
  +css( 'about/contact' )

append header
  +banner( i18n[ language ].title )
  +breadcrumb( [
    { text: i18n[ language ].breadcrumb.home, url: '' },
    { text: i18n[ language ].breadcrumb.about, url: 'about' },
    { text: i18n[ language ].title },
   ] )

append content
  section#map.map
  section.traffic.traffic--drive
    //- Header.
    h2.traffic__text.traffic__text--title= i18n[ language ].drive.title
    //- Information of driving from north to south.
    p.traffic__text.traffic__text--direction= i18n[ language ].drive.south.title
    each info in i18n[ language ].drive.south.content
      p.traffic__text.traffic__text--information= info
    //- Information of driving from south to north.
    p.traffic__text.traffic__text--direction= i18n[ language ].drive.north.title
    each info in i18n[ language ].drive.north.content
      p.traffic__text.traffic__text--information= info
  section.traffic.traffic--train
    //- Header.
    h2.traffic__text.traffic__text--title= i18n[ language ].train.title
    //- Metro information.
    each info in i18n[ language ].train.content
      p.traffic__text.traffic__text--information= info
  section.traffic.traffic--thsr
    //- Header.
    h2.traffic__text.traffic__text--title= i18n[ language ].thsr.title
    //- Metro information.
    each info in i18n[ language ].thsr.content
      p.traffic__text.traffic__text--information= info

append footer

append scripts
  +js( 'about/contact' )
