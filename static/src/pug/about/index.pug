extends /layouts/base.pug
append data
  -
    const i18n = Object.freeze( {
      [ LANG.getLanguageId( 'en-US' ) ]: {
        'title':    'About Us',
        'breadcrumb': {
          'home':   'Home',
        },
        'entries': [
          {
            title: 'Introduction',
            detail: 'Department history, education goals and developing directions',
            modifier: 'red',
            route: 'about/intro',
          },
          {
            title: 'Faculty',
            detail: 'Faculty, belonging department and research groups',
            modifier: 'green',
            route: 'about/faculty',
          },
          {
            title: 'Staff',
            detail: 'Administrative support, public relations and finance',
            modifier: 'yellow',
            route: 'about/staff',
          },
          {
            title: 'Awards',
            detail: 'Competition results, receiving awards and excellent research publications',
            modifier: 'blue',
            route: 'about/award',
          },
          {
            title: 'Contact Us',
            detail: 'Providing three different traffic information, including self-driving, train and THSR',
            modifier: 'purple',
            route: 'about/contact',
          },
        ],
      },
      [ LANG.getLanguageId( 'zh-TW' ) ]: {
        'title':    '關於本系',
        'breadcrumb': {
          'home':   '首頁',
        },
        'entries': [
          {
            title: '系所介紹',
            detail: '系所的歷史沿革、教育目標與發展方向',
            modifier: 'red',
            route: 'about/intro',
          },
          {
            title: '師資陣容',
            detail: '系所的教職人員、隸屬部門與研究類群',
            modifier: 'green',
            route: 'about/faculty',
          },
          {
            title: '行政人員',
            detail: '承辦業務與聯絡的主要人員',
            modifier: 'yellow',
            route: 'about/staff',
          },
          {
            title: '榮譽事蹟',
            detail: '包含競賽成績、獲頒獎項與優秀的研究成果等',
            modifier: 'blue',
            route: 'about/award',
          },
          {
            title: '聯絡我們',
            detail: '提供自行開車、搭乘火車及高鐵三種不同的交通資訊',
            modifier: 'purple',
            route: 'about/contact',
          },
        ],
      },
    } );
    const currentRoute = 'about';

append title
  +title( i18n[ LANG.id ].title )

append stylesheets
  +css( 'about/index' )

append header
  +header( 'body' )
  +banner(
    'body',
    {
      text: i18n[ LANG.id ].title,
      image: 'https://via.placeholder.com/1920x500',
    }
  )
  +breadcrumb(
    'body',
    [
      { text: i18n[ LANG.id ].breadcrumb.home, route: '' },
      { text: i18n[ LANG.id ].title },
    ]
  )

append content
  include /components/common/entries.pug
  +entries( 'content', i18n[ LANG.id ].entries )

append footer

append scripts
  +js( 'about/index' )
