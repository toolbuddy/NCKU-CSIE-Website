extends /layouts/announcement/briefing.pug

append data
  -
    const i18n =  Object.freeze( {
      [ LANG.getLanguageId( 'en-US' ) ]: {
        'title':    'Award',
        'topic':    'Award',
        'time':   {
          'from': 'Start Date',
          'to':   'End Date',
        },
        'pinned':   'Pinned Announcement',
        'normal':   'Announcement',
        'breadcrumb': {
          'home':   'Home',
          'about':  'About',
        },
      },
      [ LANG.getLanguageId( 'zh-TW' ) ]: {
        'title':    '榮譽事蹟',
        'topic':    '榮譽',
        'time':   {
          'from': '開始日期',
          'to':   '結束日期',
        },
        'pinned':   '置頂貼文',
        'normal':   '一般公告',
        'breadcrumb': {
          'home':   '首頁',
          'about':  '關於本系',
        },
      },
    } );
    const tags = [
        'award',
        'college',
        'master',
        'phd',
        'faculty',
    ].map( tag => allTags[ tag ] );
    const currentRoute = 'about/award';

append title
  +title( i18n[ LANG.id ].title )

append stylesheets
  +css( 'about/award' )

append header
  +banner(
    'body',
    i18n[ LANG.id ].title
  )

append breadcrumb
  +breadcrumb(
    'content',
    [
      { text: i18n[ LANG.id ].breadcrumb.home, route: '' },
      { text: i18n[ LANG.id ].breadcrumb.about, route: 'about' },
      { text: i18n[ LANG.id ].title },
    ]
  )

append content

append footer

append scripts
  +js( 'about/award' )
