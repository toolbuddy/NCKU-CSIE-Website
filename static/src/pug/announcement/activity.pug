extends /layouts/announcement/briefing.pug

append data
  -
    const i18n = Object.freeze( {
      'en-US': {
        'title':    'Activities',
        'topic':    'Activities',
        'top':      'Top Announcement',
        'breadcrumb': {
          'home':   'Home',
          'normal': 'Announcement',
        },
      },
      'zh-TW': {
        'title':    '活動公告',
        'topic':    '活動公告',
        'top':      '置頂貼文',
        'breadcrumb': {
          'normal': '系所公告',
          'home':   '首頁',
        },
      },
    } );
    const filterModifier = 'activity';
    const filterTags = [
      'all',
      'competition',
      'conference',
      'exhibition',
      'speech',
    ];
    const currentRoute = 'announcement/activity';

append title
  +title( i18n[ language ].title )

append stylesheets
  +css( 'announcement/activity' )

append header
  +banner( i18n[ language ].title )
  +breadcrumb( [
    { text: i18n[ language ].breadcrumb.home, url: '' },
    { text: i18n[ language ].breadcrumb.normal, url: 'announcement' },
    { text: i18n[ language ].title },
  ] )

append footer

append scripts
  +js( 'announcement/activity' )
