extends /layouts/announcement/briefing.pug

block append stylesheets

block append content
  include /components/common/topic.pug
  include /components/announcement/filter.pug
  include /components/announcement/title.pug
  - const i18n = require( path.resolve( languageRoot, 'announcement/recruitment' ) );

  main.content
    +topic( i18n[ language ].topic )
    +filter( 'recruitment' )
    section.announcement
      +announcement__title( i18n[ language ].top )
    section.announcement
      +announcement__title( i18n[ language ].normal )
      nav.announcement__briefings.briefings
block append scripts
  +js( 'announcement/recruitment' )
