extends /layouts/announcement/briefing.pug

append data
  -
    const i18n = Object.freeze( {
      [ LANG.getLanguageId( 'en-US' ) ]: {
        title:     'College',
        topic:     'College',
        time:   {
          from: 'Start Date',
          to:   'End Date',
        },
        pinned:    'Pinned Announcement',
        normal:    'Announcement',
        breadcrumb: {
          home:    'Home',
          student: 'Student',
        },
      },
      [ LANG.getLanguageId( 'zh-TW' ) ]: {
        title:     '大學部',
        topic:     '大學部',
        time:   {
          from: '開始日期',
          to:   '結束日期',
        },
        pinned:    '置頂貼文',
        normal:    '一般公告',
        breadcrumb: {
          home:    '首頁',
          student: '學生事務',
        },
      },
    } );
    const tags = [
        'college',
        'competition',
        'admission',
        'exhibition',
        'speech',
        'award',
        'international',
        'scholarship',
        'internship',
        'rule',
    ].map( tag => allTags[ tag ] );
    const currentRoute = 'student/college';

append title
  +title( i18n[ LANG.id ].title )

append stylesheets
  +css( 'student/college' )

append header
  +banner(
    'body',
    i18n[ LANG.id ].title
  )

append breadcrumb
  +breadcrumb(
    'content',
    [
      { text: i18n[ LANG.id ].breadcrumb.home, route: '' },
      { text: i18n[ LANG.id ].breadcrumb.student, route: 'student' },
      { text: i18n[ LANG.id ].title },
    ]
  )

append content

append footer

append scripts
  +js( 'student/college' )
