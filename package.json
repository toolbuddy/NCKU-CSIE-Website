{
  "name": "NCKU-CSIE-Website",
  "version": "1.0.0",
  "description": "NCKU CSIE Website",
  "private": true,
  "scripts": {
    "start": "cross-env NODE_ENV=production node bin/server.min.js",
    "develop": "cross-env NODE_ENV=development npm-run-all --parallel watch nodemon browser-sync",
    "test": "cross-env NODE_ENV=debug NODE_PATH=./ mocha --compilers js:babel-core/register --recursive \"test/**/*.js\"",
    "nodemon": "nodemon --config dev/server/nodemon.json bin/server.min.js",
    "browser-sync": "browser-sync --config dev/server/bs-config.js start",
    "pre-build": "npm-run-all pre-build:*",
    "pre-build:database": "shx cp settings/database/config.js.default settings/database/config.js",
    "pre-build:server": "shx cp settings/server/config.js.default settings/server/config.js && shx cp settings/server/content-security-policy.js.default settings/server/content-security-policy.js",
    "pre-build:tinymce": "npm run copy:tinymce",
    "build": "cross-env NODE_ENV=production npm-run-all build:server build:css build:html build:js",
    "build:css": "cross-env NODE_ENV=production webpack --config dev/css/webpack.config.babel.js",
    "build:html": "cross-env NODE_ENV=production webpack --config dev/html/webpack.config.babel.js",
    "build:js": "cross-env NODE_ENV=production webpack --config dev/js/webpack.config.babel.js",
    "build:server": "cross-env NODE_ENV=production webpack --config dev/server/webpack.config.babel.js",
    "clean": "npm-run-all --parallel clean:*",
    "clean:css": "shx rm -rf static/dist/css",
    "clean:html": "shx rm -rf static/dist/html",
    "clean:js": "shx rm -rf static/dist/js",
    "copy": "npm-run-all --parallel copy:*",
    "copy:tinymce": "mkdir -p static/dist/js/user/announcement ; cp -r  node_modules/tinymce/icons node_modules/tinymce/plugins node_modules/tinymce/skins node_modules/tinymce/themes static/dist/js/user/announcement",
    "lint": "npm-run-all --parallel lint:*",
    "lint:css": "stylelint --config dev/css/.stylelintrc.js --cache --cache-location node_modules/.cache/.stylelintcache --syntax scss --fix \"static/src/sass/**/*.scss\"",
    "lint:html": "pug-lint --config dev/html/.pug-lintrc.js static/src/pug",
    "lint:js": "eslint --config dev/js/.eslintrc.js --cache --cache-location node_modules/.cache/.eslintcache-js --fix \"static/src/js/**/*.js\"",
    "lint:server": "eslint --config dev/server/.eslintrc.js --cache --cache-location node_modules/.cache/.eslintcache-server --ignore-path dev/server/.eslintignore --fix \"apis/**/*.js\" \"dev/**/*.js\" \"models/**/*.js\" \"routes/**/*.js\" \"settings/**/*.js\" server.js",
    "watch": "npm-run-all --parallel watch:*",
    "watch:css": "webpack --watch --config dev/css/webpack.config.babel.js",
    "watch:html": "webpack --watch --config dev/html/webpack.config.babel.js",
    "watch:js": "webpack --watch --config dev/js/webpack.config.babel.js",
    "watch:server": "webpack --watch --config dev/server/webpack.config.babel.js",
    "d": "npm run develop",
    "p": "npm run pre-build",
    "pd": "npm run pre-build:database",
    "ps": "npm run pre-build:server",
    "b": "npm run build",
    "bc": "npm run build:css",
    "bh": "npm run build:html",
    "bj": "npm run build:js",
    "bs": "npm run build:server",
    "c": "npm run clean",
    "cc": "npm run clean:css",
    "ch": "npm run clean:html",
    "cj": "npm run clean:js",
    "l": "npm run lint",
    "lc": "npm run lint:css",
    "lh": "npm run lint:html",
    "lj": "npm run lint:js",
    "ls": "npm run lint:server",
    "w": "npm run watch",
    "wc": "npm run watch:css",
    "wh": "npm run watch:html",
    "wj": "npm run watch:js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/toolbuddy/NCKU-CSIE-Website.git"
  },
  "author": "ProFatXuanAll",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/toolbuddy/NCKU-CSIE-Website/issues"
  },
  "homepage": "https://github.com/toolbuddy/NCKU-CSIE-Website#readme",
  "dependencies": {
    "@babel/polyfill": "^7.11.5",
    "bcrypt": "^5.0.0",
    "compression": "^1.7.3",
    "connect-session-sequelize": "^6.1.1",
    "cors": "^2.8.5",
    "d3": "^5.16.0",
    "d3-scale": "^3.2.2",
    "deep-freeze": "0.0.1",
    "express": "^4.16.4",
    "express-session": "^1.17.1",
    "github-markdown-css": "^3.0.1",
    "helmet": "^3.23.3",
    "load-google-maps-api": "^1.3.2",
    "markdown-it": "^8.4.2",
    "multer": "^1.4.2",
    "mysql": "^2.18.1",
    "mysql2": "^1.7.0",
    "node-sass": "^4.14.1",
    "pug": "^2.0.4",
    "sequelize": "^4.44.3",
    "tinymce": "^5.4.2",
    "url-loader": "^1.1.2",
    "validate.js": "^0.13.1"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.5",
    "babel-core": "^6.26.3",
    "babel-loader": "^8.1.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "browser-sync": "^2.26.12",
    "cross-env": "^5.2.1",
    "css-loader": "^1.0.1",
    "cssnano": "^4.1.7",
    "eslint": "^5.9.0",
    "eslint-loader": "^2.2.1",
    "extract-loader": "^3.2.0",
    "file-loader": "^2.0.0",
    "html-loader": "^0.5.5",
    "mini-css-extract-plugin": "^0.4.5",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "postcss-loader": "^3.0.0",
    "pug-html-loader": "^1.1.5",
    "pug-lint": "^2.6.0",
    "pug-loader": "^2.4.0",
    "sass-loader": "^7.3.1",
    "shx": "^0.3.2",
    "style-loader": "^0.23.1",
    "stylelint": "^13.7.1",
    "stylelint-scss": "^3.11.1",
    "stylelint-webpack-plugin": "^0.10.5",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.9",
    "webpack-node-externals": "^1.7.2"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  }
}
